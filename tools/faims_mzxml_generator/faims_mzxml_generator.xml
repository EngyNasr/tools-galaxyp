<tool id="faims_mzxml_generator" name="FAIMS MzXML Generator" version="0.1.1" profile="20.09">
  <description>
    (Beta)
  </description>
  <requirements>
      <requirement type="package" version="6.12.0.90">mono</requirement>
  </requirements>

  <command>
    <![CDATA[
      mkdir output &&
      ln $input_raw ${input_raw.name}.raw &&
      mono /panfs/roc/website/galaxyp.msi.umn.edu/galaxy/tools/msi/FAIMS_MzXML_Generator/WriteFaimsXMLFromRawFile.exe ${input_raw.name}.raw output
    ]]>
  </command>

  <inputs>
    <param name="input_raw" type="data" format="thermo.raw" label="Input File" />
  </inputs>
  <outputs>
    <collection name="mzXML Output" type="list" label="mzXML Output">
      <discover_datasets pattern="__designation_and_ext__" directory="output" />
    </collection>
  </outputs>
</tool>
